<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F1D8A07"
    tools:context=".menu_principal">

    <Button
        android:id="@+id/lupaSearchButton"
        android:layout_width="218dp"
        android:layout_height="151dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gato_ton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="218dp"
        android:layout_height="151dp"
        android:layout_marginTop="178dp"
        android:layout_marginBottom="402dp"
        android:background="@drawable/boton_huerta_digital"
        android:text="@string/huerta_digital"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
