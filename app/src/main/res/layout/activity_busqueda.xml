<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#539C42"
    tools:context=".busqueda">

    <TextView
        android:id="@+id/nombreCientBD"
        android:layout_width="162dp"
        android:layout_height="32dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="224dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreCultivoBD"
        app:layout_constraintVertical_bias="0.656" />

    <TextView
        android:id="@+id/txt_nombreCient"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:background="#B000838F"
        android:text="Nombre Científico:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombreCultivo"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/txt_descripcionBusq"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:background="#851565C0"
        android:text="Descripción:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombreCient"
        app:layout_constraintVertical_bias="0.054" />

    <ImageView
        android:id="@+id/imageViewBusqueda"
        android:layout_width="325dp"
        android:layout_height="317dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/huerta_casera1" />

    <SearchView
        android:id="@+id/lupaCultivo"
        android:layout_width="311dp"
        android:layout_height="88dp"
        android:layout_marginBottom="356dp"
        android:background="#1A44DD"
        android:backgroundTint="#9CCCB7B7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_nombreCultivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="424dp"
        android:background="#1C2548"
        android:hint="@string/nombre_del_cultivo"
        android:text="Nombre del Cultivo:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreCultivoBD"
        android:layout_width="162dp"
        android:layout_height="32dp"
        android:layout_marginBottom="288dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toEndOf="@+id/txt_nombreCultivo" />

    <TextView
        android:id="@+id/descripcionBD"
        android:layout_width="342dp"
        android:layout_height="129dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcionBusq" />

</androidx.constraintlayout.widget.ConstraintLayout>
